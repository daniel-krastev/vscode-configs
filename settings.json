{
  "telemetry.telemetryLevel": "off",

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 400,
  "files.insertFinalNewline": true,
  "files.autoGuessEncoding": true,
  "files.exclude": {
    "**/.turbo": true,
    "**/.svelte-kit": true,
    "**/vite.config.ts.*": true
  },

  "workbench.colorTheme": "Atom One Dark",
  "workbench.preferredDarkColorTheme": "Atom One Dark",
  "workbench.iconTheme": "eq-material-theme-icons-deepforest",
  "workbench.activityBar.visible": false,

  "window.menuBarVisibility": "toggle",

  "editor.maxTokenizationLineLength": 10000000,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.unicodeHighlight.allowedLocales": {
    "bg": true
  },
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",

  // terminal
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.external.linuxExec": "konsole",
  "terminal.integrated.tabs.defaultIcon": "console",
  "terminal.integrated.commandsToSkipShell": [
    // mapped to ctrl+e in vscode
    "workbench.view.explorer"
  ],

  // svelte
  "svelte.enable-ts-plugin": true,
  "svelte.ask-to-enable-ts-plugin": false,
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // tailwind
  "tailwind-fold.unfoldIfLineSelected": true,
  "tailwind-fold.showTailwindImage": true,
  "tailwind-fold.autoFold": true,
  "tailwindCSS.files.exclude": [
    "**/.git",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**"
  ],

  // go
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },

  // copilot
  "github.copilot.enable": {
    "*": true
  },

  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
}
